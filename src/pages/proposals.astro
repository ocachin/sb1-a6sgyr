---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon';

// Mock data for proposals
const proposals = [
	{ id: 1, title: 'Increase Funding for Public Parks', votes: 245, category: 'Environment' },
	{ id: 2, title: 'Implement City-Wide Recycling Program', votes: 189, category: 'Sustainability' },
	{ id: 3, title: 'Expand Public Transportation Routes', votes: 302, category: 'Infrastructure' },
];
---

<Layout title="Proposals | E-Democracy Platform">
	<h1 class="text-3xl font-bold mb-6">Current Proposals</h1>
	<div class="mb-6">
		<a href="#" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors">
			<Icon name="lucide:plus" class="w-5 h-5 inline-block mr-2" />
			Submit New Proposal
		</a>
	</div>
	<div class="space-y-4">
		{proposals.map(proposal => (
			<div key={proposal.id} class="bg-white p-4 rounded-lg shadow">
				<h2 class="text-xl font-semibold mb-2">{proposal.title}</h2>
				<p class="text-gray-600 mb-2">Category: {proposal.category}</p>
				<div class="flex items-center justify-between">
					<span class="text-blue-500">
						<Icon name="lucide:thumbs-up" class="w-5 h-5 inline-block mr-1" />
						{proposal.votes} votes
					</span>
					<a href={`/proposals/${proposal.id}`} class="text-blue-500 hover:underline">View Details</a>
				</div>
			</div>
		))}
	</div>
</Layout>