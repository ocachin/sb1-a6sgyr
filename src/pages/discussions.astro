---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon';

// Mock data for discussions
const discussions = [
	{ id: 1, title: 'How can we improve local education?', replies: 23, lastActivity: '2 hours ago' },
	{ id: 2, title: 'Discussing the new city budget proposal', replies: 45, lastActivity: '1 day ago' },
	{ id: 3, title: 'Ideas for reducing traffic congestion', replies: 17, lastActivity: '3 days ago' },
];
---

<Layout title="Discussions | E-Democracy Platform">
	<h1 class="text-3xl font-bold mb-6">Community Discussions</h1>
	<div class="mb-6">
		<a href="#" class="bg-purple-500 text-white px-4 py-2 rounded-lg hover:bg-purple-600 transition-colors">
			<Icon name="lucide:message-square-plus" class="w-5 h-5 inline-block mr-2" />
			Start New Discussion
		</a>
	</div>
	<div class="space-y-4">
		{discussions.map(discussion => (
			<div key={discussion.id} class="bg-white p-4 rounded-lg shadow">
				<h2 class="text-xl font-semibold mb-2">{discussion.title}</h2>
				<div class="flex items-center justify-between text-gray-600">
					<span>
						<Icon name="lucide:message-circle" class="w-5 h-5 inline-block mr-1" />
						{discussion.replies} replies
					</span>
					<span>Last activity: {discussion.lastActivity}</span>
				</div>
				<a href={`/discussions/${discussion.id}`} class="mt-2 inline-block text-blue-500 hover:underline">Join Discussion</a>
			</div>
		))}
	</div>
</Layout>